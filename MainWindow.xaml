<Window x:Class="Migo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Migo"
        Title="MainWindow" Height="350" Width="565">

    <Window.Resources>
        <!--<DataTemplate x:Key="command1">-->
        <DataTemplate DataType="{x:Type local:OneExe}">
            <Border Padding="5">
                <StackPanel Orientation="Horizontal" MinWidth="150">
                    <Image Source="{Binding Path=ImageSource}" Width="28" Height="28" Stretch="Uniform" Margin="0,0,5,0"/>
                    <StackPanel Orientation="Vertical" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=FileName}" FontSize="11"/>
                            <TextBlock Text="{Binding Path=Arguments}" FontSize="11" Foreground="DarkSlateGray" Margin="5,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Path=FolderPath}" FontSize="10" Foreground="DarkGray" Margin="0,2,0,0"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Label Content="Hagge, hier kann man Zeug machen." HorizontalAlignment="Left" Margin="171,33,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddACommand" Content="Add one" HorizontalAlignment="Left" Margin="420,33,0,0" VerticalAlignment="Top" Width="75" Click="btnAddACommand_Click"/>
        <ListBox x:Name="lbShownCommands" Margin="56,64,56,22" Padding="5,0,0,0" MouseDoubleClick="lbShownCommands_DoubleClick">
            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListBox.GroupStyle>
        </ListBox>

    </Grid>
</Window>
